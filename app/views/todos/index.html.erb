      <%= form_with(url:"/todos", method: "post", class: "AddTodo" ) do |form| %>
        <%= form.text_field :todo_text, class:"AddTodo__Text", value:"Whats Next?"%>
        <%= form.date_field :due_date, class:"AddTodo__Date"  %>
        <input class="AddTodo__Button" type="submit" placeholder="Add" value="Add">
      <% end %>

      <%= render partial: "todo-section", locals: {
        section_title: "Overdue",
        todos: Todo.overdue,
        show_duedate: true
        } %>
      <%= render partial: "todo-section", locals: {
        section_title: "Due Today",
        todos: Todo.duetoday,
        show_duedate: false
        } %>
      <%= render partial: "todo-section", locals: {
        section_title: "Due Later",
        todos: Todo.duelater,
        show_duedate: true
        } %>

    </article>
  </main>
